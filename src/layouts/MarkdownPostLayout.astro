---
import BaseLayout from './BaseLayout.astro'
import '../styles/remark-link-card.css'
import ProfCard from '@components/ProfCard.astro'

const { frontmatter } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title} currentPage={frontmatter.title} schema="blog">
  <p>著者: {frontmatter.author}</p>
  <p><em>{frontmatter.description}</em></p>
  <p>投稿日：{frontmatter.pubDate.toLocaleDateString()}</p>
  
<div class="slot md">
  <slot />
</div>
<ProfCard />
</BaseLayout>
