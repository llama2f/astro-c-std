---
import BaseLayout from './BaseLayout.astro';
import { Image } from 'astro:assets';
import thumbnail from '/src/assets/images/noimage.png';

const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<p>著者: {frontmatter.author}</p>
<p><em>{frontmatter.description}</em></p>
<p>投稿日：{frontmatter.pubDate.toLocaleDateString()}</p>
<Image src={thumbnail} alt={frontmatter.title}/>
{frontmatter.image ? 
<img src={`/src/assets/images/${frontmatter.image}`} width="300" alt={frontmatter.title} /> : <Image src={thumbnail} alt={frontmatter.title}/>}
  <div class="tags">
    {frontmatter.tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
<slot />


</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>