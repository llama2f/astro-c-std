---
import CardWrapper from '@components/module/CardWrapper.astro'
import CardInner from '@components/module/CardInner.astro'
const { pubDate, upDate ,style } = Astro.props
---

  <CardWrapper style={style}>
    <CardInner><i class=`fa-regular fa-clock`></i> {pubDate.toLocaleDateString()}</CardInner>
    { upDate ? <CardInner><i class="fa-solid fa-rotate-right ml-4" ></i> {upDate.toLocaleDateString()}</CardInner> : ''}
  </CardWrapper>