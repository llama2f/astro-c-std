---
import Navigation from './Navigation.astro'
import Humburger from './Humburger.astro'
import ThemeIcon from './ThemeIcon.astro'
import SiteIcon from '@components/SiteIcon.astro'
import WrapperContent from '@components/module/WrapperContent.astro'
import CardWrapper from '@components/module/CardWrapper.astro'
---

<header class="min-h-50 sticky top-0 flex min-h-20 w-full justify-center bg-slate-600 dark:bg-slate-900 ">
 
  <nav class="w-full">
    <WrapperContent style="mx-auto">
      <CardWrapper style="gap-4">
          <SiteIcon />
          <ThemeIcon />
      </CardWrapper>
      <Humburger />
      <Navigation />
    </WrapperContent>
    </nav>
  
</header>
